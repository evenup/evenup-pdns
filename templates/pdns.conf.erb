# Managed by puppet - do not modify
setuid=pdns
setgid=pdns

launch=bind:static,pipe:puppetdb
pipe-puppetdb-command=/usr/sbin/pdns_puppetdb.rb
pipe-puppetdb-timeout=250
<% if scope.lookupvar('pdns::pdns_regex') != '' %>
pipe-puppetdb-regex=<%= scope.lookupvar('pdns::pdns_regex') %>
<% end %>
pipebackend-abi-version=1
bind-static-config=/etc/named.conf

recursor=127.0.0.1
local-address=<%= scope.lookupvar('::ipaddress') %>
